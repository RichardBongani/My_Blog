<section class="mb-5">
<h5>Add comment</h5>
<%= form_for ([@post, @post.comments.build]) do |f| %>

    <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, class:'form-control'%>
    <%= f.label :Comment %>
    <%= f.text_area :body, class:'form-control' %>
    <%= f.submit "Submit", class:'btn btn-primary mt-3' %>
  </div>
<% end %>
</section>
